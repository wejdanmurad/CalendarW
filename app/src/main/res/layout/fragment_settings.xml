<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/bg_radius_btm_gradient_colored"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tb_txt_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_margin="15dp"
            android:fontFamily="@font/poppins"
            android:text="@string/change_Password"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:visibility="visible" />

    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        tools:context=".fragments.SettingsFragment">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="@string/ResetPassword"
            android:textColor="@color/tv_date_gray"
            android:textSize="18sp" />


        <EditText
            android:id="@+id/oldpass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_radius_full_gradient_colored_alpha"
            android:gravity="center"
            android:hint="@string/old_pass"
            android:inputType="numberPassword"
            android:paddingEnd="8dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/newpass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_radius_full_gradient_colored_alpha"
            android:gravity="center"
            android:hint="@string/new_pass"
            android:inputType="numberPassword"
            android:paddingEnd="8dp"
            android:textColorHint="@color/black" />

        <EditText
            android:id="@+id/confirmpass"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/bg_radius_full_gradient_colored_alpha"
            android:gravity="center"
            android:hint="@string/confirm_pass"
            android:inputType="numberPassword"
            android:paddingEnd="8dp"
            android:textColorHint="@color/black" />


